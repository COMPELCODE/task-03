html,
body
    height: 100%
    overflow: hidden
.wrapper
    max-width: 100%
    height: 100%
    background-color: #68cdd5
    .header
        .back-wrap
            display: block
            img
                width: 2.7rem
                display: inline-block
                margin-top: 1rem
                margin-left: 1.8rem
        .logo
            text-align: center
            img
                width: 9.1rem
                display: inline-block
                margin-top: 2.1rem
    .main
        // padding-top: 17.5%
        // padding-right: 15.625%
        // padding-bottom: 27.8125%
        // padding-left: 14.0625%
        padding-top: 6.1rem
        padding-right: 5rem
        padding-bottom: 8.9rem
        padding-left: 4.5rem
        transition: all .6s
        .text
            line-height: 2.4rem
            font-size: 1.5rem
            text-align: left
            color: #fff
            transition: all .6s
    .footer
        padding-right: 17.5%
        padding-left: 19.0625%
        .item
            float: left
            font-size: 1.4rem
            color: #fff
            text-align: center
        .item:last-child
            float: right
        .item p:first-child
            margin-bottom: 1.1rem
        & img
            width: 4.3rem
            display: inline-block
            transition: all .6s
@media only screen and (min-width:980px)
    .wrapper
        .header
            .back-wrap img
                width: auto
            .logo img
                width: auto
        .main
            padding-top: 14.2rem
            padding-right: 10rem
            padding-bottom: 19.8rem
            padding-left: 9rem
            .text
                text-align: center
        .footer .item img
            width: auto
@media only screen and (max-device-width:768px)
    .wrapper
        .main
            padding-top: 14.2rem
            padding-right: 10rem
            padding-bottom: 19.8rem
            padding-left: 9rem
            .text
                text-align: center
@media only screen and (max-device-width:414px)
    .wrapper
        .main
            padding-top: 12rem
            padding-right: 7rem
            padding-bottom: 16rem
            padding-left: 6rem
            .text
                text-align: left
@media only screen and (max-device-width:375px)
    .wrapper
        .main
            padding-top: 10rem
            padding-right: 6rem
            padding-bottom: 14rem
            padding-left: 5rem
@media screen and (max-device-width:320px)
    .wrapper
        .main
            padding-top: 6.1rem
            padding-right: 5rem
            padding-bottom: 8.9rem
            padding-left: 4.5rem
